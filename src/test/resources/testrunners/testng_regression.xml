<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Open Cart Regression Test Suite" thread-count="1"
	parallel="tests" verbose="4">


	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />

		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />

		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
	</listeners>



	<test name="Login Page Test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Accounts Page Test">
		<classes>
			<class name="qa.com.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="ProductInfo Page Test">
		<classes>
			<class name="qa.com.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="Register Page Test">
		<classes>
			<class name="qa.com.opencart.tests.RegisterPageTest" />
		</classes>
	</test>


</suite>